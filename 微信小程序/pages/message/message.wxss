page {
  background-color: #f1f1f1;
}

.card {
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  box-shadow: 0 0 8rpx #f1f1f1;
  margin: 60rpx 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 17px;
}

.card-date {
  font-size: 13px;
  color: #ccc;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
}

.card image {
  width: 100%;
  height: 320rpx;
}

.card-desc {
  font-size: 15px;
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin: 20rpx 0;
}

.card-read {
  font-size: 14px;
  color: #666;
}
